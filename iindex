function calculateProfit() {
  const productCost = parseFloat(document.getElementById('productCost').value) || 0;
  const packaging = parseFloat(document.getElementById('packaging').value) || 0;
  const domesticShipping = parseFloat(document.getElementById('domesticShipping').value) || 0;
  const internationalShipping = parseFloat(document.getElementById('internationalShipping').value) || 0;
  const customsTax = parseFloat(document.getElementById('customsTax').value) || 0;
  const amazonFee = parseFloat(document.getElementById('amazonFee').value) || 0;
  const adCost = parseFloat(document.getElementById('adCost').value) || 0;
  const salePrice = parseFloat(document.getElementById('salePrice').value) || 0;
  const eurRate = parseFloat(document.getElementById('eurRate').value) || 48;

  const totalCost = productCost + packaging + domesticShipping + internationalShipping + customsTax + amazonFee + adCost;
  const netProfitEur = salePrice - totalCost;
  const netProfitTry = netProfitEur * eurRate;
  const margin = (netProfitEur / salePrice) * 100;

  document.getElementById('result').innerHTML = `ðŸ’¶ Net KÃ¢r: <b>${netProfitEur.toFixed(2)} â‚¬</b>  |  ðŸ’° YaklaÅŸÄ±k <b>${netProfitTry.toFixed(0)} â‚º</b><br>ðŸ“ˆ KÃ¢rlÄ±lÄ±k OranÄ±: <b>${margin.toFixed(1)}%</b>`;
}
</script></body>
